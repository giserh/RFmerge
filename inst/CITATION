citEntry(entry	= "Manual",
	 title	= "RFmerge: Merging of Satellite Datasets with Ground Observations using Random Forests",
	 author = c(person("Mauricio Zambrano-Bigiarini", email = "mzb.devel@gmail.com", role=c("aut", "cre", "cph")), 
                    person("Oscar M. Baez-Villanueva", email = "obaezvil@th-koeln.de", role=c("aut", "cph")), 
                    person("Juan Giraldo-Osorio", email = "j.giraldoo@javeriana.edu.co", role=c("ctb")) 
                   ),
	 year = year,
	 note = paste(vers, ". doi:10.5281/zenodo.1287350"),
         url = "https://CRAN.R-project.org/package=RFmerge",
	 textVersion = paste(
	               "Zambrano-Bigiarini, M.; Baez-Villanueva O.M.; Giraldo-Osorio, J. (", year, "). ",
                       "RFmerge: Merging of Satellite Datasets with Ground Observations using Random Forests. ",
                        vers, 
                       ". URL https://cran.r-project.org/package=RFmerge",
                       ". DOI:10.5281/zenodo.1287350",
                       ".", sep=""),
         key = "Zambrano-Bigiarini+al2019-RFmerge_pkg"
	 )

