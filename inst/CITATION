## -*- R -*-
citHeader("To cite 'RFmerge' in publications use:")

year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date, perl = TRUE)
vers <- paste("R package version", meta$Version)

citEntry(
         entry="Article",
         title= "RF-MEP: a novel Random Forest method for merging gridded precipitation products and ground-based measurements",
         journal="Remote Sensing of Environment",
         author="Baez-Villanueva, O. M. and Zambrano-Bigiarini, M. and Beck, H. and McNamara, I. and Ribbe, L. and Nauditt, A. and Birkel, C. and Verbist, K. and Giraldo-Osorio, J.D. and Thinh, N.X.",
         volume= "",
         number="",
         pages="",
         year="2019",
         note="",
         doi="",
         url="",
         textVersion="Baez-Villanueva, O. M.; Zambrano-Bigiarini, M.; Beck, H.; McNamara, I.; Ribbe, L.; Nauditt, A.; Birkel, C.; Verbist, K.; Giraldo-Osorio, J.D.; Thinh, N.X. (2019). RF-MEP: a novel Random Forest method for merging gridded precipitation products and ground-based measurements, Remote Sensing of Environment, (accepted).",
         key = "BaezVillanueva+al2019-RFmerge_article"
         )

